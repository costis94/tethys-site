---
import "../styles/global.css";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

type Props = {
  title?: string;
  description?: string;
  lang?: "el" | "en";
};

const {
  title = "Tethys",
  description = "Offline-first πλατφόρμα για διαχείριση άρδευσης.",
  lang = "el",
} = Astro.props;
---

<html lang={lang}>
  <head>
    <link rel="canonical" href={`https://www.tethys.systems${Astro.url.pathname}`} />
    <link rel="alternate" hreflang="el" href="https://www.tethys.systems/el/" />
<link rel="alternate" hreflang="en" href="https://www.tethys.systems/en/" />
<link rel="alternate" hreflang="x-default" href="https://www.tethys.systems/el/" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="bg-white text-slate-900">
    <main class="mx-auto max-w-5xl px-6 py-10">
      <Header />
      <slot />
      <Footer />
    </main>
  </body>
</html>

---
const items = [
  { href: "/", label: "Αρχική" },
  { href: "/docs", label: "Τεκμηρίωση" },
  { href: "/contact", label: "Επικοινωνία" },
];
---

<header class="mb-12">
  <div class="flex items-center justify-between gap-4">
<a href="/" class="flex items-center gap-3 font-semibold tracking-tight">
  <img
    src="/brand/logo.svg"
    alt="Tethys"
    class="h-16 w-auto"
    loading="eager"
  />
  <span class="text-base">Tethys Platform</span>
</a>


    <nav class="flex items-center gap-1">
      {items.map((it) => (
        <a
          href={it.href}
          class="rounded-lg px-3 py-2 text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900"
        >
          {it.label}
        </a>
      ))}

      <!-- placeholder για EN αργότερα -->
      <span class="ml-2 hidden sm:inline-flex items-center gap-2 rounded-lg border border-slate-200 px-2 py-1 text-xs text-slate-600">
        EL
        <span class="text-slate-400">|</span>
        EN (soon)
      </span>
    </nav>
  </div>

  <div class="mt-6 h-px bg-slate-200"></div>
</header>

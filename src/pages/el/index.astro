---
import Layout from "../../components/Layout.astro";

import Hero from "../../components/home/Hero.astro";
import Problem from "../../components/home/Problem.astro";
import Features from "../../components/home/Features.astro";
import OfflineField from "../../components/home/OfflineField.astro";
import WebAdmin from "../../components/home/WebAdmin.astro";
import CTA from "../../components/home/CTA.astro";
---

<Layout
  title="Tethys — Ψηφιακή διαχείριση άρδευσης (Offline-first)"
  description="Offline-first πλατφόρμα για ΤΟΕΒ: Android εφαρμογή για καταγραφές στο πεδίο + Web διαχείριση για πλήρη έλεγχο."
  lang="el"
>
  <Hero />
  <Problem />
  <Features />
  <OfflineField />
  <WebAdmin />
  <CTA />

  <!-- Motion One: simple reveal animations -->
  <script type="module">
    import { animate, inView } from "motion";

    const els = document.querySelectorAll("[data-anim]");
    els.forEach((el) => {
      const delay = Number(el.getAttribute("data-anim-delay") || "0");
      inView(el, () => {
        animate(
          el,
          { opacity: [0, 1], transform: ["translateY(10px)", "translateY(0px)"] },
          { duration: 0.5, easing: "ease-out", delay }
        );
      }, { margin: "-10% 0px -10% 0px" });
    });
  </script>
</Layout>
